<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hospital.myapplication.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Warehouse APP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/button_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp" />

    <TextView
        android:id="@+id/sabanas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="50dp"
        android:text="SÃ¡banas: "
        android:textSize="@dimen/input_font_size"
        android:layout_alignLeft="@+id/textView" />

    <EditText
        android:id="@+id/sabanas_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sabanas_label"
        android:layout_toEndOf="@+id/sabanas_label"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/sabanas_label"
        android:text="0" />

    <TextView
        android:id="@+id/camas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/sabanas_label"
        android:layout_marginTop="100dp"
        android:text="Camas: "
        android:textSize="@dimen/input_font_size"
        android:layout_alignLeft="@+id/sabanas_label" />

    <EditText
        android:id="@+id/camas_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/camas_label"
        android:layout_toEndOf="@+id/camas_label"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/camas_label"
        android:text="0" />

    <TextView
        android:id="@+id/mesas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/camas_label"
        android:layout_marginTop="150dp"
        android:text="Mesas: "
        android:textSize="@dimen/input_font_size"
        android:layout_alignLeft="@+id/camas_label" />

    <EditText
        android:id="@+id/mesas_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mesas_label"
        android:layout_toEndOf="@+id/mesas_label"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/mesas_label"
        android:text="0" />

    <TextView
        android:id="@+id/sillas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/mesas_label"
        android:layout_marginTop="200dp"
        android:text="Sillas: "
        android:textSize="@dimen/input_font_size"
        android:layout_alignLeft="@+id/mesas_label" />

    <EditText
        android:id="@+id/sillas_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sillas_label"
        android:layout_toEndOf="@+id/sillas_label"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/sillas_label"
        android:text="0" />

    <TextView
        android:id="@+id/sillones_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/sillas_label"
        android:layout_marginTop="250dp"
        android:text="Sillones: "
        android:textSize="@dimen/input_font_size"
        android:layout_alignLeft="@+id/sillas_label" />

    <EditText
        android:id="@+id/sillones_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sillones_label"
        android:layout_toEndOf="@+id/sillones_label"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/sillones_label"
        android:text="0" />


</RelativeLayout>
